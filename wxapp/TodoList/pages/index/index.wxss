  /* flex: 1; */
  
}
.titleBar .status text.active {
  color: #ca2100;
}

.addForm {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 99;
  background: rgba(0, 0, 0, .4);
}
.addForm .addForm-div {
  background: #fff;
  padding: 30rpx;
}
.weui-input {
  height: 2.58823529em;
  min-height: 2.58823529em;
  line-height: 2.58823529em;
}

.addForm .addForm-div .weui-input {
  border: 1px solid #ccc;
  border-radius: 5rpx;
  padding: 5rpx 20rpx;
  font-size: 12pt;
  margin-bottom: 10rpx;
}

.weui-btn:first-child {
  margin-top: 0;
}

.addForm .addForm-div .addForm-div button {
  margin-right: 15rpx;
}

.hide {
  display: none;
}
.lists {
  height: 0;
  flex: 1;
  padding-top: 15rpx;
  padding-bottom: 10rpx;
}
.lists .item {
  border-bottom: 1px dotted #000;
  position: relative;
  overflow: hidden;
}
.lists .item .content {
  display: flex;
  padding: 15rpx -30rpx;
  align-items: center;
  position: relative;
  left: 0;
  top: 0;
  width: 694rpx;
  z-index: 10;
  background: #fff;
}
lists .item .icon {
  padding: 15rpx 0 10rpx;

}
.icon {
  vertical-align: middle;

}

.lists .item text {
  font-size: 11pt;
  color: #444;
  padding: 0 10rpx;
}
.lists .item .time {
  font-size: 11pt;
  color: #444;
  padding: 0 10rpx;
  width: 120rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.lists .item .title {
  flex: 1;
  overflow: hidden;
  white-space: nowrap; 
  text-overflow: ellipsis;
  background: #ff0;
}