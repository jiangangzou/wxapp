.titleBar {
  border-bottom: 1rpx solid#eee;
  padding: 0 30rpx 10rpx;
  display: flex;
  align-items: center;
}

.titleBar .status {
  flex: 1;
  
}
.titleBar .status text {
  display: inline;
  font-size: 12pt;
  color: #999999;
  padding: 10rpx -20rpx -10rpx 0;
  margin-right: 15rpx
}
/* 主元素拿到其他子元素该有的空间本身该有的大小外，所有的空间 */
