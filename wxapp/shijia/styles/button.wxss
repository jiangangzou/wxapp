.button {
    display: inline-block;
    margin: 4px;
    background: #e0e1e2;
    padding: 0 24px;
    color: rgba(0, 0, 0, .5);
    font-weight: 1px;
    border-radius: 1px;
    font-size: 32rpx;
    transition: 0.3s all;
}
.button.primary {
    background: #000000;
    color: rgba(255, 255,255, .9);
}